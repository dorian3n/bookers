<h1>Books</h1>
<table>
	<tr>
		<th><p><strong>Title</strong></p></th>
		<th><p><strong>Body</strong></p></th>
	</tr>
	<% @books.each do |book| %>

	<tr>
		<td>
			<span><%= book.title %></span>
		</td>

		<td>
			<span><%= book.body %></span>
		</td>

		<td>
			<span><%= link_to "Show", book_path(book.id) %></span>
		</td>

		<td>
			<span><%= link_to "Edit", edit_book_path(book.id) %></span>
		</td>

		<td>
			<span><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
</span>
		</td>
	</tr>
	<% end %>
</table>



<h2>New book</h2>

<%= form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>

	<p><%= f.submit 'Create Book' %></p>

<% end %>